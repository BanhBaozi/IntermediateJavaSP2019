        oCompany1.name = "IBM";

        PublicCompany oPublicCompany1 = new PublicCompany();
        PublicCompany oPublicCompany2 = new PublicCompany();


        oPublicCompany1.name = "Apple";
        oPublicCompany2.name = "Microsoft";
        oPublicCompany1.stockSymbol = "APPL";
